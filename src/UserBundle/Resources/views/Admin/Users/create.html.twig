{% extends 'UserBundle:Admin:layout.html.twig' %}

{% block main %}
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
            <h4 class="panel-title">Ajouter un utilisateur</h4>
        </div>
        <div class="panel-body">
            {{ form_start(form) }}
            {{ form_errors(form) }}
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.email, 'Adresse email') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.email, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.username, 'Login') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.username, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.password, 'Mot de passe') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.password, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.roles, 'Privil√®ges') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.roles, { 'attr' : { 'class' : 'form-control', 'multiple' : false } }) }}
                    </div>
                </div>
            <button class="btn btn-success">Ajouter</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

